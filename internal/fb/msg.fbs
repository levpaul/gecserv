include "player.fbs";
include "core.fbs";

namespace msg;


// TODO: Rename this as ServerMessage
union GameMessage { MapUpdate }

table Message {
    data: GameMessage;
}

table MapUpdate {
    seq: uint32;
    logins: [float64];
    logouts: [float64];
    psyncs: [Player];
}

enum PlayerAction: uint8 { W_DOWN, W_UP, A_DOWN, A_UP, S_DOWN, S_UP, D_DOWN, D_UP, M1_DOWN, M1_UP, M2_DOWN, M2_UP}

table PlayerInput {
    seq: uint32;
    actions: [PlayerAction];
}

